name: Pipeline mensal ‚Äì Rela√ß√£o Nominal de Servidores

on:
  workflow_dispatch:
  schedule:
    # roda todo dia 5 √†s 06:00 (hor√°rio UTC)
    # ajuste se quiser mensal fixo
    - cron: "0 6 5 * *"

permissions:
  contents: write

jobs:
  pipeline:
    runs-on: ubuntu-22.04

    steps:
      # 1Ô∏è‚É£ Checkout
      - name: üì• Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      # 2Ô∏è‚É£ Python
      - name: üêç Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      # 3Ô∏è‚É£ Instalar depend√™ncias
      - name: üì¶ Instalar depend√™ncias
        run: |
          python -m pip install --upgrade pip
          pip install psycopg2-binary requests frictionless dpckan

      # 4Ô∏è‚É£ Importar dados do CKAN para PostgreSQL
      - name: üóÑÔ∏è Importar dados do CKAN ‚Üí PostgreSQL
        env:
          PG_HOST: ${{ secrets.PG_HOST }}
          PG_PORT: ${{ secrets.PG_PORT }}
          PG_DB: ${{ secrets.PG_DB }}
          PG_USER: ${{ secrets.PG_USER }}
          PG_PASSWORD: ${{ secrets.PG_PASSWORD }}
        run: |
          python scripts/importar_datapackage_ckan.py

      # 5Ô∏è‚É£ Exportar views para CSV
      - name: üì§ Exportar views PostgreSQL ‚Üí CSV
        env:
          PG_HOST: ${{ secrets.PG_HOST }}
          PG_PORT: ${{ secrets.PG_PORT }}
          PG_DB: ${{ secrets.PG_DB }}
          PG_USER: ${{ secrets.PG_USER }}
          PG_PASSWORD: ${{ secrets.PG_PASSWORD }}
        run: |
          python scripts/exportar_views_csv.py

      # 6Ô∏è‚É£ Commit dos CSVs derivados
      - name: üíæ Commit dos CSVs derivados
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"

          git add data/*.csv

          if git diff --cached --quiet; then
            echo "‚ÑπÔ∏è Nenhuma altera√ß√£o nos CSVs"
          else
            git commit -m "Atualiza CSVs derivados (views PostgreSQL)"
            git push
          fi
